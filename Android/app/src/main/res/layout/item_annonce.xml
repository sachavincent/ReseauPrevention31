<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingStart="10dp"
  android:paddingEnd="10dp"
  android:background="@drawable/rounded_corners"
  android:layout_marginStart="10dp"
  android:layout_marginEnd="10dp">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/titreMessage"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:ellipsize="end"
    android:gravity="start"
    android:lines="1"
    android:text="titre Message"
    android:textAllCaps="true"
    android:textColor="@android:color/black"
    android:textSize="18sp"
    app:layout_constraintBottom_toTopOf="@id/auteurMessage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintWidth_percent=".8"/>

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/auteurMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Gendarmerie"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@id/dateMessage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/titreMessage"/>

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/dateMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="01/01/1970"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@id/auteurMessage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/auteurMessage"/>


  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/contenuMessage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="Contenu du annonce..."
    android:textColor="@android:color/black"
    android:paddingBottom="10dp"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/auteurMessage"/>
</androidx.constraintlayout.widget.ConstraintLayout>