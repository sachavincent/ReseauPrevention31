<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorArrierePlan">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Bandeau_accueil"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/colorBandeau"
        app:layout_constraintTop_toTopOf="0">

        <TextView
            android:id="@+id/TitreAppli"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="35dp"
            android:text="Réseau prévention 31"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="0"
            app:layout_constraintTop_toTopOf="0" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/logo"
            app:layout_constraintTop_toTopOf="0"
            app:layout_constraintRight_toRightOf="0"
            tools:layout_editor_absoluteX="325dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Carre_blanc"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="85dp"
        app:layout_constraintTop_toTopOf=""/>
    <TextView
        android:id="@+id/connexion_necessaire"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Connectez-vous"
        android:textColor="@android:color/black"
        android:textFontWeight="0"
        app:layout_constraintLeft_toLeftOf="1"
        app:layout_constraintTop_toTopOf="1"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="461dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonEnvoyerMessage"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:hint="@string/envoyer_un_message"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonConsulterInfos"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginRight="30dp"
        android:hint="@string/consulter_les_infos"
        android:background="@color/colorInfos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.68" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonLocaliserBrigade"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:text="@string/localiser_une_brigade"
        android:background="@color/colorLocaliser"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ButtonConseilsProtection"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginRight="30dp"
        android:text="@string/conseils_protection"
        android:background="@color/colorConseils"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>