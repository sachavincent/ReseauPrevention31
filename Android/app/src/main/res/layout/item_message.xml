<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="10dp"
  android:layout_marginEnd="10dp"
  android:paddingStart="10dp"
  android:paddingEnd="10dp"
  android:background="@android:color/white">


  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/auteurMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Force"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@id/dateMessage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/dateMessage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="01/01/1970"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@id/auteurMessage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/auteurMessage"/>


  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/contenuMessage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingBottom="10dp"
    android:text="Contenu du message..."
    android:textColor="@android:color/black"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/auteurMessage"/>
</androidx.constraintlayout.widget.ConstraintLayout>